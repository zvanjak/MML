    "idf.pythonInstallPath": "/usr/bin/python3",
    
    // CMake parallel build settings - use all available cores
    "cmake.parallelJobs": 0,  // 0 = auto-detect (uses all cores)
    "cmake.buildArgs": ["--parallel"],
    
    // C++ IntelliSense settings
    "C_Cpp.intelliSenseEngine": "default",
    "C_Cpp.default.compileCommands": "${workspaceFolder}/compile_commands.json",
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/mml",
        "${workspaceFolder}/catch",
        "${workspaceFolder}/src"
    ],
    "C_Cpp.autocomplete": "default",
    "C_Cpp.errorSquiggles": "enabled",

    // Formatting settings
    // Use clang-format when manually formatting (Shift+Alt+F or Format Document)
    // but do NOT auto-format on save
    "editor.formatOnSave": false,
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.formatOnSave": false
    },
    "[c]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.formatOnSave": false
    },
    "C_Cpp.clang_format_style": "file"
}